<?xml version="1.0" encoding="utf-8"?>
<!--
    Auto Backup Rules for API <31
    SECURITY: Exclude all sensitive data from backups to prevent data extraction via ADB
    See: https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!--
        EXCLUDE sensitive data from backups
        An attacker with ADB access can extract backups using:
        adb backup -f app.ab -noapk com.watxaut.fontsreviewer
    -->
    
    <!-- Exclude SharedPreferences (may contain auth tokens) -->
    <exclude domain="sharedpref" path="." />
    
    <!-- Exclude Room Database (contains cached fountain data) -->
    <exclude domain="database" path="." />
    
    <!-- Exclude all app files (including DataStore) -->
    <exclude domain="file" path="." />
    
    <!--
        INCLUDE only non-sensitive data (if any)
        Example: If you want to backup user's theme preference (non-sensitive):
        <include domain="sharedpref" path="app_theme.xml"/>
    -->
    
</full-backup-content>
